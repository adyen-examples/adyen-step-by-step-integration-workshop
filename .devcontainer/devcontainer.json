{
  "name": "Node",
  
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",

  "features": {},

  // Forward port 8080 to your local machine
  "forwardPorts": [8080],

  // Make forwarded port 8080 public
  "portsAttributes": {
    "8080": {
      "label": "Make 8080 public",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },

  // Run after container starts
  "postStartCommand": "cd src && npm install && npm run dev"
}
